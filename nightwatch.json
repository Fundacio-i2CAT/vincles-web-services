{
  "src_folders": [
    "test/browser//"
  ],
  "output_folder": "reports",
  "page_objects_path": "test/browser/Pages",
  "globals_path": "nightwatchGlobals.js",
  "test_settings": {
    "default": {
      "launch_url": "http://localhost:3000",
      "silent": true,
      "screenshots": {
        "enabled": false,
        "path": ""
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "chrome_headless": {
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "./reports/failure_screenshots/"
      },
      "desiredCapabilities": {
        "chromeOptions": {
          "args": [
            "--headless"
          ]
        }
      }
    }
  }
}
